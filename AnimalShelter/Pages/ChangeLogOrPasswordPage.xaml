<Page x:Class="AnimalShelter.Pages.ChangeLogOrPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AnimalShelter.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Изменение учетных данных">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Image Grid.ColumnSpan="2" Grid.RowSpan="3" Margin="0" Source="/Res/WaveBackground.png" Stretch="Fill" VerticalAlignment="Center"/>
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Изменение логина" FontSize="20" Grid.ColumnSpan="3" Grid.Row="0" FontWeight="Black" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Text="Старый логин:" Grid.Row="1" Grid.Column="1" />
            <TextBox x:Name="TB_old_login_LEFT" Width="200" Grid.Row="1" Grid.Column="2"  Margin="10 0 0 0"/>
            <TextBlock Text="Пароль:" Grid.Row="3" Grid.Column="1"/>
            <PasswordBox x:Name="PB_Password_LEFT" Width="200" Grid.Row="3" Grid.Column="2" Margin="10 0 0 0"/>
            <TextBlock Text="Новый логин:" Grid.Row="2" Grid.Column="1"/>
            <TextBox x:Name="TB_new_login_LEFT" Width="200" Grid.Row="2" Grid.Column="2" Margin="10 0 0 0"/>
        </Grid>
        <Button x:Name="But_LEFT" Grid.Row="2" Grid.Column="0" Content="Сохранить" Padding="10" Width="NaN" Height="40" Click="But_LEFT_Click" Margin="200,10,41,10"/>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Изменение пароля" FontSize="20" Grid.ColumnSpan="3" Grid.Row="0" FontWeight="Black" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Text="Логин:" Grid.Row="1" Grid.Column="1" />
            <TextBox x:Name="TB_login_RIGHT" Width="200" Grid.Row="1" Grid.Column="2"  Margin="10 0 0 0"/>
            <TextBlock Text="Старый пароль:" Grid.Row="2" Grid.Column="1"/>
            <PasswordBox x:Name="PB_Old_Password_RIGHT" Width="200" Grid.Row="2" Grid.Column="2" Margin="10 0 0 0"/>
            <TextBlock Text="Новый пароль:" Grid.Row="3" Grid.Column="1"/>
            <PasswordBox x:Name="PB_new_Password_RIGHT" Width="200" Grid.Row="3" Grid.Column="2" Margin="10 0 0 0"/>
        </Grid>
        <Button x:Name="But_RIGHT" Grid.Row="2" Grid.Column="1" Content="Сохранить" HorizontalAlignment="Left" Padding="10" Width="177" Height="40" Click="But_RIGHT_Click" Margin="177,10,0,10"/>
        <Border  CornerRadius="10" BorderThickness="2" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left"  Width="auto" Height="auto" Background="#ffff" BorderBrush="#FF9C1A" Margin="20,0,0,0">
            <Button Name="But_Cancel"  Content="Отмена" Width="125" Height="30"  BorderThickness="0" Background="Transparent"   Padding="5" Click="But_Cancel_Click" />
        </Border>
    </Grid>
</Page>
