<Page x:Class="AnimalShelter.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AnimalShelter.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="576" d:DesignWidth="1020"
      Title="Авторизация">

    <Grid>
        <Image Margin="0" Source="/Res/WaveBackground.png" Stretch="Fill"/>
        <Grid VerticalAlignment="Center" Margin="20" HorizontalAlignment="Center" MinHeight="150" MinWidth="150">
            
            <Viewbox Stretch="Uniform" Width="Auto" Height="Auto">
                <Image Source="/Res/BackgroundAuth.png" 
               Stretch="Uniform" 
               />
            </Viewbox>

        </Grid>
        <TextBlock HorizontalAlignment="Right"  VerticalAlignment="Center" Margin="0,-135,220,0" Text="Логин"   Foreground="DarkGray" FontSize="15"   FontStyle="Oblique" FontWeight="DemiBold"  Height="30" Width="200" />
        <TextBlock HorizontalAlignment="Right"  VerticalAlignment="Center" Margin="0,15,220,0" Text="Пароль" FontSize="15" Foreground="DarkGray" FontStyle="Oblique" FontWeight="DemiBold"  Height="31" Width="200" />
        <TextBlock HorizontalAlignment="Right"  VerticalAlignment="Top" Padding="0" Margin="0,130,125,0"  FontSize="20pt" Text="Авторизация" TextAlignment="Center"  Width="300" Background="Transparent" />

        <TextBlock Text=" Введите логин.." HorizontalAlignment="Right" Padding="5,10,5,5"  VerticalAlignment="Center" Margin="0,-90,120,0" FontSize="16" Height="35" Width="300" Foreground="Gray" Name="txtHintLogin"/>
        <TextBlock Text=" Введите пароль.." FontSize="16" HorizontalAlignment="Right" Padding="5,10,5,5" VerticalAlignment="Center" Height="35" Margin="0,60,120,0" Width="300" Foreground="Gray" x:Name="txtHintPassword"  Grid.Column="2" Grid.Row="0" />


        <TextBox KeyDown="Input_KeyDown" x:Name="LoginTB" TextChanged="LoginTB_TextChanged" Background="Transparent" HorizontalAlignment="Right" Padding="5,10,5,5" VerticalAlignment="Center" Margin="0,-90,120,0" Text="" FontSize="16" Height="35" Width="300" />
        <PasswordBox KeyDown="Input_KeyDown" x:Name="PasswordAuth" PasswordChanged="PasswordAuth_PasswordChanged" Background="Transparent" FontSize="16" HorizontalAlignment="Right" Padding="5,10,5,5" VerticalAlignment="Center" Height="35" Margin="0,60,120,0" Width="300"  />
        
        
        <Border CornerRadius="10" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="350,220,0,0"  Width="auto" Height="auto" Background="#FF9C1A" BorderBrush="#FF9C1A">
            <Button Name="ButAuth" Padding="5" Content="Вход" FontSize="18"  HorizontalAlignment="Stretch" Background="Transparent" BorderThickness="0" Click="ButAuth_Click"  VerticalAlignment="Stretch" Height="30" Width="90"  />
        </Border>

        <Border CornerRadius="10" BorderThickness="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,220,150,0" Width="auto" Height="auto" Background="#FF9C1A" BorderBrush="#FF9C1A">
            <Button Name="ButReg" Padding="5" Content="Регистрация" FontSize="18"  HorizontalAlignment="Stretch" Background="Transparent" BorderThickness="0" Click="ButReg_Click"  VerticalAlignment="Stretch" Height="30" Width="120" />
        </Border>
    </Grid>
</Page>
