<Page x:Class="AnimalShelter.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AnimalShelter.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="576" d:DesignWidth="1020"
      Title="Авторизация">

    <Grid>
        <Image Margin="0" Source="/Res/WaveBackground.png" Stretch="Fill"/>
        <Grid VerticalAlignment="Center" Margin="20" HorizontalAlignment="Center" MinHeight="150" MinWidth="150">

            <Viewbox Stretch="Uniform" Width="Auto" Height="Auto">
                <Image Source="/Res/BackgroundAuth.png" 
               Stretch="Uniform" 
               />
            </Viewbox>

        </Grid>
        <Label HorizontalAlignment="Right"  VerticalAlignment="Center" Margin="0,-145,220,0" Content="Логин" FontSize="15"  Foreground="DarkGray" FontStyle="Oblique" FontWeight="DemiBold"  Height="30" Width="200" />
        <Label HorizontalAlignment="Right"  VerticalAlignment="Center" Margin="0,0,223,0" Content="Пароль" FontSize="15" Foreground="DarkGray" FontStyle="Oblique" FontWeight="DemiBold"  Height="30" Width="200" />

        <Label HorizontalAlignment="Right" Padding="5" VerticalAlignment="Top" Margin="0,130,125,0" FontSize="26" HorizontalContentAlignment="Center" Content="Авторизация" Height="50" Width="300" />
        <TextBox  HorizontalAlignment="Right" Padding="5" VerticalAlignment="Center" Margin="0,-90,120,0" Text="Логин" FontSize="16" Height="35" Width="300" />
        <PasswordBox FontSize="16" HorizontalAlignment="Right" Padding="5" VerticalAlignment="Center" Height="35" Margin="0,60,120,0" Width="300"  />
        <Border CornerRadius="10" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="450,220,0,0"  Width="auto" Height="auto" Background="#FF9C1A" BorderBrush="#FF9C1A">
            <Button Name="ButAuth" Content="Вход" FontSize="18"  HorizontalAlignment="Stretch" Background="Transparent" BorderThickness="0" Click="ButAuth_Click"  VerticalAlignment="Stretch" Height="30" Width="90" />
        </Border>
    </Grid>
</Page>
