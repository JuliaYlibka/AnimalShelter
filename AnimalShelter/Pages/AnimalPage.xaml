<Page x:Class="AnimalShelter.Pages.AnimalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AnimalShelter.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="576" d:DesignWidth="1020"
      Title="AnimalPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition MinWidth="250" Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.RowSpan="2" Grid.ColumnSpan="3" Margin="0" Source="/Res/WaveBackground.png" Stretch="Fill"/>
        <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Red" Margin="10">
        <TextBlock HorizontalAlignment="Left" Grid.Column="0" Margin="0,20,0,0" TextWrapping="Wrap" Text="Кличка" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Stretch"  Grid.Column="0"  Margin="100,20,10,0" TextWrapping="Wrap" Padding="0" Text="TextBox" VerticalAlignment="Top" />
        
        </Grid>

    </Grid>
</Page>
