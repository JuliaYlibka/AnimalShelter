<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Button">
        <Setter  Property="Height" Value="30"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="FontSize" Value="10pt"/>
        <Setter Property="FontFamily" Value="Calibri"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="#FF9C1A"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="TextBlock.Background" Value="#FF9C1A"/>
    </Style>
    <Style TargetType="Button" x:Key="But_Defoult">
        <Setter Property="FontSize" Value="10pt"/>
        <Setter Property="FontFamily" Value="Calibri"/>

        <Setter Property="Background" Value="#FF9C1A"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="FontFamily" Value="Calibri"/>
    </Style>
    <Style TargetType="TextBox" x:Key="TB_Defolt">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontFamily" Value="Calibri"/>
    </Style>
    <Style TargetType="TextBlock">

        <Setter Property="Height" Value="30"/>
        <Setter Property="FontFamily" Value="Calibri"/>
        <Setter Property="FontSize" Value="15"/>
        
    </Style>
    <Style TargetType="PasswordBox">
        <Setter Property="Height" Value="30"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontFamily" Value="Calibri"/>


    </Style>
    <Style TargetType="ComboBox">
        
        <Setter Property="Height" Value="30"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontFamily" Value="Tw Cen MT"/>



    </Style>
    <Style TargetType="MenuItem">
        <Setter Property="FontFamily" Value="Calibri"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Margin" Value="0"/>

        <Setter Property="Background" Value="Transparent"/>

    </Style>



</ResourceDictionary>