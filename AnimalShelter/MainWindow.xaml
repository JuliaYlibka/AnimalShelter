<Window x:Class="AnimalShelter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimalShelter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="615" MinWidth="1020" WindowStartupLocation="CenterScreen">
    <Grid>

        <Frame  x:Name="MainFrame" Navigated="MainFrame_Navigated" NavigationUIVisibility="Hidden" Source="Pages/AuthPage.xaml"/>

        <Border Name="MenuBar" CornerRadius="10" BorderThickness="2" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,0" Height="63" BorderBrush="#FFFFF1DF" Background="#FFFFF1DF">

            <Menu  Padding="3" Background="Transparent"   FontFamily="Calibri" FontSize="16" Height="40" Margin="10,10,10,10" VerticalAlignment="Top" HorizontalAlignment="Center" >
                <MenuItem Name="Back_But" Header="Назад" Click="Back_But_Click" Padding="6">
                    <MenuItem.Icon>
                        <Image Source="Res/BackImage.png" Height="auto " />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />

                <MenuItem Name="AnimalsMenu" Header="Животные" >
                    <MenuItem Name="Animals" Header="Список животных" Click="Animals_Click"/>
                    <Separator/>
                    <MenuItem Name="Veterinary_examination" Header="Вет осмотры" Click="Veterinary_examination_Click" Foreground="Orange"/>

                    <MenuItem Name="Medical_record" Header="Мед карты" Click="Medical_record_Click" Foreground="Orange"/>
                    <MenuItem Name="Care_log" Header="Журнал ухода" Click="Care_log_Click"  Foreground="Orange"/>
                    <Separator/>
                    <MenuItem Name="Breeds" Header="Породы" Click="Breeds_Click" />
                    <MenuItem Name="Source_of_receipt" Header="Источники поступления" Click="Source_of_receipt_Click" />
                </MenuItem>
                <MenuItem Name="ContractorsMenu" Header="Контрагенты">
                    <MenuItem Name="Contractor" Header="Контрагенты"  Click="Contractor_Click"/>
                    <Separator/>
                    <MenuItem Name="Employee" Header="Сотрудники" Click="Employee_Click" />
                    <MenuItem Name="Volunteer" Header="Волонтеры" Click="Volunteer_Click"  />
                    <MenuItem Name="New_owner" Header="Владельцы" Click="New_owner_Click"  />
                </MenuItem>
                <Separator />
                
                
                <MenuItem Name="Donation" Header="Пожертвования" Click="Donation_Click"   />
                <MenuItem Name="Adoption" Header="Усыновления" Click="Adoption_Click"/>
                
                <!-- для ветеринаров отдельное меню -->
                <MenuItem Padding="6" Name="Animals_VET" Header="Список животных" Click="Animals_Click"/>
                <MenuItem Padding="6" Name="Volunteer_VET" Header="Волонтеры" Click="Volunteer_Click"  />

                <MenuItem Padding="6" Name="Veterinary_examination_VET" Header="Вет осмотры" Click="Veterinary_examination_Click" />

                <MenuItem Padding="6" Name="Medical_record_VET" Header="Мед карты" Click="Medical_record_Click" />
                <MenuItem Padding="6" Name="Care_log_VET" Header="Журнал ухода" Click="Care_log_Click"  />
                <Separator />

                <MenuItem Name="Log_out_But" HorizontalAlignment="Right" Header="Выйти" Click="Log_out_But_Click" Padding="6">
                    <MenuItem.Icon>
                        <Image Source="Res/LogoutImage.png" Height="auto " />
                    </MenuItem.Icon>
                </MenuItem>
            </Menu>
        </Border>
    </Grid>
</Window>
