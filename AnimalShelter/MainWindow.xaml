<Window x:Class="AnimalShelter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimalShelter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800" WindowStartupLocation="CenterScreen">
    <Grid>

        <Frame  x:Name="MainFrame" Navigated="MainFrame_Navigated" NavigationUIVisibility="Hidden" Source="Pages/AuthPage.xaml">

        </Frame>
        <Border Name="MenuBar" CornerRadius="10" BorderThickness="2" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,0" Height="60" BorderBrush="#FFFFF1DF" Background="#FFFFF1DF">

            <Menu  Padding="3" Background="Transparent"   FontFamily="Calibri" FontSize="16" Height="40" Margin="10,10,10,10" VerticalAlignment="Top" HorizontalAlignment="Center" >
                <MenuItem Name="Back_But" Header="Назад" Click="Back_But_Click" >
                    <MenuItem.Icon>
                        <Image Source="Res/BackImage.png" Height="auto " />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />

                <MenuItem Header="Животные" >
                    <MenuItem Header="Список животных" Click="Animals_Click"/>
                    <Separator/>
                    <MenuItem Header="Вет осмотры" Click="Veterinary_examination_Click"/>

                    <MenuItem Header="Мед карты" Click="Medical_record_Click"/>
                    <MenuItem Header="Журнал ухода" Click="Care_log_Click"/>
                    <Separator/>
                    <MenuItem Header="Породы" Click="Breeds_Click"/>
                    <MenuItem Header="Источники поступления" Click="Source_of_receipt_Click"/>
                </MenuItem>
                <MenuItem Header="Контрагенты" >
                    <MenuItem Header="Контрагенты"  Click="Contractor_Click"/>
                    <Separator/>
                    <MenuItem Header="Сотрудники" Click="Employee_Click"/>
                    <MenuItem Header="Волонтеры" Click="Volunteer_Click"/>
                    <MenuItem Header="Владельцы" Click="New_owner_Click"/>
                </MenuItem>
                <Separator />
                <MenuItem Header="Пожертвования" Click="Donation_Click"/>
                <MenuItem Header="Усыновления" Click="Adoption_Click"/>
                <TextBox x:Name="aaa"/>
            </Menu>
        </Border>
    </Grid>
</Window>
